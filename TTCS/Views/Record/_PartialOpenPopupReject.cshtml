@model IEnumerable<TTCS.Models.EmailRejectReason>

@{
    int nNumber = 0;
    if (Model.Count() < 1)
    {
    <span style="color: red">請連絡管理員, 新增退回原因選項!!</span>
    }
}

@foreach (var item in Model)
{
    if (nNumber < 1)
    {
    @Html.RadioButton("RejectReason", item.Reason, true) @Html.DisplayFor(modelitem => item.Reason)<br />
        nNumber++;
    }
    else
    {
    @Html.RadioButton("RejectReason", item.Reason) @Html.DisplayFor(modelitem => item.Reason)<br />
    }
}
<br />
@if (Model.Count() > 0)
{
    <input id="EmailRecodRejectConfirm" type="submit" value="送出" />
}

